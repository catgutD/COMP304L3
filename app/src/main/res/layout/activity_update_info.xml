<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="390dp"
        android:layout_height="298dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="202dp">

        <TableRow
            android:id="@+id/rowPatientFirstName"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtUpdatePatientFirstName"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="@string/patient_first_name_text" />

            <EditText
                android:id="@+id/txtInputUpdatePatientFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/rowPatientLastName"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtUpdatePatientLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_last_name_text" />

            <EditText
                android:id="@+id/txtInputUpdatePatientLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/rowNurseName"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtUpdateNurseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nurse_name_text" />

            <EditText
                android:id="@+id/txtInputUpdateNurseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/rowRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtUpdateRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_room_text" />

            <EditText
                android:id="@+id/txtInputUpdateRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/rowDepartment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtUpdateDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_department_text" />

            <EditText
                android:id="@+id/txtInputUpdateDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnNewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_test_button"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="530dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/update_patient_button"
        app:layout_constraintEnd_toStartOf="@+id/btnNewTest"
        tools:layout_editor_absoluteY="530dp" />

    <Button
        android:id="@+id/btnViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/view_tests_button"
        app:layout_constraintEnd_toStartOf="@+id/btnUpdate"
        tools:layout_editor_absoluteY="530dp" />

</androidx.constraintlayout.widget.ConstraintLayout>